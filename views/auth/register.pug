extends ../layout/index.pug

block content
  div(class="py-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8")
    h1(class="text-4xl my-10 font-extrabold text-center")
      span(class="bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent") Real
      span(class="font-normal text-black") state 
    h2(class="text-center text-2xl md:text-3xl font-bold text-gray-800 mb-8")= page

    if errors 
      div(class="max-w-md mx-auto my-8")
        each error in errors
          div(class="bg-red-50 border-l-4 border-red-600 p-4 mb-3 rounded-lg")
            p(class="text-red-600 text-sm font-medium")= error.msg

    div(class="mt-8 mx-auto max-w-md")
      div(class="bg-white py-8 px-6 shadow-lg rounded-2xl") 
        form(class="space-y-5" method="POST" action="/auth/register" noValidate)
          input(type="hidden" name="_csrf" value= csrfToken)
          
          div 
            label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="name") Nombre
            input#name(class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black" placeholder="Tu nombre..." type="text" name="name" value= user ? user.name : '')
          
          div 
            label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="email") Email
            input#email(class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black" placeholder="Tu email..." type="email" name="email" value= user ? user.email: '')
          
          div 
            label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="password") Contraseña
            input#password(class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black" placeholder="Tu contraseña..." type="password" name="password")
          
          div 
            label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="repeat_password") Repetir Contraseña
            input#repeat_password(class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black" placeholder="Repite tu contraseña..." type="password" name="repeat_password")
          
          div(class="flex items-center justify-between p-2") 
            a(class="text-gray-600 text-sm hover:text-black transition-colors" href="/auth/login") Iniciar sesión 
            a(class="text-gray-600 text-sm hover:text-black transition-colors" href="/auth/forgot-password") Olvidé mi contraseña 
          
          button(class="w-full bg-black hover:bg-gray-800 text-white font-bold py-3 rounded-lg cursor-pointer transition-colors" type="submit") Crear cuenta
