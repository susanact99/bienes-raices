extends ../layout/admin 

block content
  div(class="py-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8")
    h1(class="text-4xl my-10 font-extrabold text-center")
      span(class="bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent") Real
      span(class="font-normal text-black") state 
    h2(class="text-center text-2xl md:text-3xl font-bold text-gray-800 mb-8")= page

    a(href="/my-realstate" class="rounded-lg py-3 px-6 bg-black hover:bg-gray-800 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto transition-colors") Volver

    div(class="mx-auto max-w-4xl bg-white shadow-lg rounded-2xl overflow-hidden")
        if messages.length
            ul(class="divide-y divide-gray-200")
                each message in messages
                    li(class="p-6 hover:bg-gray-50 transition-colors")
                        div(class="space-y-4")
                            div(class="flex items-center gap-4")
                                div(class="bg-gray-100 rounded-full p-2")
                                    svg(class="w-6 h-6 text-gray-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                                        path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z")
                                div
                                    p(class="font-bold text-gray-800") #{message.user.name}
                                    p(class="text-sm text-gray-600") #{message.user.email}
                            
                            div(class="bg-gray-50 p-4 rounded-lg")
                                p(class="text-gray-700") #{message.message}
                            
                            p(class="text-xs text-gray-500 text-right") 
                                span(class="font-medium") Enviado: 
                                | #{formatDate(message.createdAt)}
        else 
            div(class="p-10 text-center")
                svg(class="w-16 h-16 mx-auto text-gray-300 mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                    path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z")
                
                p(class="text-gray-600") No hay mensajes para esta propiedad
